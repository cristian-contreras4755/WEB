<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          
    <div class="modal-body">

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <h3><i class="fa fa-check-square-o"></i> Mantenimiento de Clientes</h3>
                    </div>

                    <div class="card-body">

                        <div class="form-row">

                            <div class="form-group col-md-6">
                                <label for="inputAddress">Tipo Cliente(*)</label>
                                <select class="form-control" id="cb_tipopersona" style="width: 100%;">
                                    <option value="0">Pesona Natural</option>
                                    <option value="1">Pesona juridica</option>
                                </select>
                            </div>


                            <div class="form-group col-md-6">
                                <label for="inputAddress">Grupo Corporativo(*)</label>
                                <select class="form-control" id="cb_grupo_corporativo" style="width: 100%;"></select>
                            </div>
                        </div>


                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="inputEmail4">Nombres(*)</label>
                                    <input type="text" class="form-control" id="txt_nombre_cliente" placeholder="Nombre" autocomplete="off">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputPassword4">Apellido Materno(*)</label>
                                    <input type="text" class="form-control" id="txt_apmaterno" placeholder="Ap. Materno" autocomplete="off">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputPassword4">Apellido Paterno(*)</label>
                                    <input type="text" class="form-control" id="txt_appaterno" placeholder="Ap. Paterno" autocomplete="off">
                                </div>
                            </div>


                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="inputAddress">Razon social(*)</label>
                                    <input type="text" class="form-control" id="txt_razon_social" placeholder="Rason Social.">
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="inputEmail4">Nombre Comercial</label>
                                    <input type="email" class="form-control" id="txt_nomcomercial" placeholder="Nombre Comercial" autocomplete="off">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputPassword4">Nombre Interno</label>
                                    <input type="text" class="form-control" id="txt_nominterno" placeholder="Nombre Interno" autocomplete="off">
                                </div>
                            </div>




                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Tipo Documento identidad(*)</label>
                                    <select class="form-control" id="cb_tipodocidentidad" style="width: 100%;"></select>

                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputPassword4">Nro Documento(*)</label>
                                    <input type="text" class="form-control" id="txt_nroDoc" placeholder="Ingrese Nro. de documento" autocomplete="off">
                                </div>
                            </div>






                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputAddress">Direccion</label>
                                    <input type="text" class="form-control" id="txt_direccion" placeholder="Ingrese Dirección">
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="inputAddress">Direccion(2)</label>
                                    <input type="text" class="form-control" id="txt_direccion2" placeholder="Ingrese Dirección">
                                </div>
                            </div>


                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputAddress">telefono(*)</label>
                                    <input type="text" class="form-control" id="txt_telefono" placeholder="Ingrese Telefono">
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="inputAddress">Color(rgb)</label>
                                    <input type="text" class="form-control" id="txt_color" placeholder="Ingrese color RGB">
                                </div>
                            </div>


                            <div class="form-row">
                                <div class="form-group col-sm-2 col-md-4">
                                    <label for="inputCity">Activar Geolocalizacion</label>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
                                        <label class="custom-control-label" for="defaultUnchecked">Activar Geolocalizacion?</label>
                                    </div>


                                </div>

                                <div class="form-group col-sm-4 col-md-4">
                                    <label for="inputCity">Latitud</label>
                                    <input type="text" disabled class="form-control" id="txt_lng">
                                </div>

                                <div class="form-group col-sm-4 col-md-4">
                                    <label for="inputCity">Longitud</label>
                                    <input type="text" disabled class="form-control" id="txt_lat">
                                </div>

                            </div>

                        </div>
                    </div><!-- end card-->
            </div>

                </div>


                <div class="row">
                    <div class="col-md-12 modal_body_map">
                        <div class="location-map" id="location-map">
                            <div style="width: 600px; height: 400px;" id="map_canvas"></div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button class="btn btn-success" id="btn_GuardarMdfCliente"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar</button>
                <button type="button" class="btn btn-danger" id="btn_CancelarGuardarMdfCliente" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>


